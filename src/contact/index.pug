doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="description", content="")
    meta(name="keywords", content="")
    title お問い合わせ | お料理サロン エリズテーブルアンドキッチン
    link(rel="stylesheet", href="../_assets/css/style.css")
    script(src="../_assets/js/viewport.js")
  body.low.contact
    header#header.low
      .logo
        a(href="../")
          img(src="../_assets/images/header-logo.png" alt="お料理サロン Eri’s table & kitchen エリズテーブルアンドキッチン")
      nav
        ul
          li
            a(href="../")
              |HOME
          li
            a(href="../about/")
              |ABOUT
          li
            a(href="../lesson/")
              |LESSON
          li.current
            a(href="../contact/")
              |CONTACT
      .hamburger-menu
        .inner
          .hamburger-menu-line.line-top
          .hamburger-menu-line.line-middle
          .hamburger-menu-line.line-bottom
    #wrapper.wrapper
      .low-mv.contact
        h1 お問い合わせ
      .contact-form
        .inner
          h2
            img(src="../_assets/images/contact-tit.svg" alt="Contact")
            span お問い合わせ
          form(action="" method="post")
            table
              tr
                th
                  label.required(for="name")
                    |お名前
                td
                  input#name(type="text" name="name")
              tr
                th
                  label.required(for="kana")
                    |フリガナ
                td
                  input#kana(type="text" name="kana")
              tr
                th
                  label.required(for="age")
                    |年齢
                td
                  input#age.age(type="text" name="age")
                  span.age
                    |歳
              tr
                th
                  label.required.sex(for="sex")
                    |性別
                td
                  input#sex(type="radio" name="sex" checked="checked")
                  span.sex
                    |女性
                  span.sex-note
                    |※当サロンは女性限定となっております。
              tr
                th
                  label.required(for="mail")
                    |メールアドレス
                td
                  input#mail(type="text" name="mail")
              tr
                th
                  label.required(for="tel")
                    |電話番号
                td
                  input#tel.tel(type="text" name="tel1")
                  span.tel
                    |ー
                  input.tel(type="text" name="tel2")
                  span.tel
                    |ー
                  input.tel(type="text" name="tel3")
              tr
                th
                  label.required(for="request")
                    |ご希望日・
                    br
                    |ご希望レッスン・
                    br
                    |ご質問など
                td
                  textarea#request(name="request", cols="30", rows="10" placeholder="例）●月●日　プレレッスン希望")
              tr
                th
                  label(for="allergy")
                    |アレルギー・
                    br
                    |苦手な食材など
                td
                  textarea#allergy(name="allergy", cols="30", rows="10" placeholder="例）卵アレルギーです")
          .form-note ※入力必須項目です
          .button-link
            a(href="")
              |確認画面へ
      footer
        .footer-top
          .footer-contact-link-wrap
            .footer-contact-desc
              |レッスンのご予約、お問い合せはこちら
            .fcl-button
              a(href="../contact/")
                |お問い合せフォーム
          .footer-sns-links
            .link
              a(href="https://www.instagram.com/eristableandkitchen/" target="_blank")
                img.ig(src="../_assets/images/ico-instagram-w.png" alt="Instagram")
            .link
              a(href="https://eclat.hpplus.jp/hanagumi/miyahara" target="_blank")
                img.wc(src="../_assets/images/ico-webclat-w.png" alt="Webéchat")
        .copyright
          p Copyright © Eri’s table & kitchen  All rights reserved.
    script(src="../_assets/js/jquery-3.5.1.min.js")
    script(src="../_assets/js/script.js")
